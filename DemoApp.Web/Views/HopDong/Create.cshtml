@model DemoApp.Entities.HopDongLaoDong

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Tạo hợp đồng lao động mới</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Create", "HopDong", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                            @Html.AntiForgeryToken()

                            <div class="form-container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaNV, "Mã Nhân Viên")
                                @Html.DropDownListFor(model => model.MaNV, new SelectList(ViewBag.DanhSachNhanVien, "MaNV", "HoTen"), "Chọn nhân viên", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LoaiHD, "Loại Hợp Đồng")
                                <select id="LoaiHD" name="LoaiHD" class="form-control">
                                    <option value="">Chọn loại hợp đồng</option>
                                    <option value="Hợp đồng xác định thời hạn">Hợp đồng xác định thời hạn</option>
                                    <option value="Hợp đồng không xác định thời hạn">Hợp đồng không xác định thời hạn</option>\
                                    <option value="Hợp đồng thử việc">Hợp đồng thử việc</option>
                                    <!-- Thêm các loại hợp đồng khác vào đây -->
                                </select>
                                @Html.ValidationMessageFor(model => model.LoaiHD, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                Từ ngày
                                <input type="date" id="TuNgay" name="TuNgay" class="form-control">
                                @Html.ValidationMessageFor(model => model.TuNgay, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                Đến ngày
                                <input type="date" id="DenNgay" name="DenNgay" class="form-control">
                                @Html.ValidationMessageFor(model => model.DenNgay, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FileHopDong, "File Hợp Đồng")
                                <input type="file" id="FileHopDong" name="file" class="form-control-file" accept="image/*" />
                                @Html.ValidationMessageFor(model => model.FileHopDong, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success m-2">Tạo</button>
                        @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-danger m-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
