@model DemoApp.Entities.HopDongLaoDong

@{
    ViewBag.Title = "Cập nhật thông tin hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="form-title text-danger text-center">Cập nhật thông tin hợp đồng</h1>
    <div class="row">
        <div class="col-md-12 col-md-offset-2">
            <div class="form-container">
                @using (Html.BeginForm("Update", "HopDong", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

             

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <!-- Thêm các trường thông tin cập nhật tại đây -->
                            <div class="form-group">
                                Mã hợp đồng
                                @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control mt-2", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaNV, "Tên nhân viên ký")
                                @Html.DropDownListFor(model => model.MaNV, new SelectList(ViewBag.DanhSachNhanVien, "MaNV", "HoTen"), "Chọn nhân viên", new { @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                File hợp đồng:
                                <input type="file" id="FileHopDong" name="file" class="form-control-file" accept="image/*" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            
                            <div class="form-group">
                                Ngày Bắt Đầu
                                <input type="date" id="TuNgay" name="TuNgay" class="form-control mt-2" value="@Model.TuNgay.ToString("yyyy-MM-dd")">
                                @Html.ValidationMessageFor(model => model.TuNgay, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                Ngày kết thúc
                                <input type="date" id="DenNgay" name="DenNgay" class="form-control mt-2" value="@Model.DenNgay.ToString("yyyy-MM-dd")">
                                @Html.ValidationMessageFor(model => model.DenNgay, "", new { @class = "text-danger" })
                            </div>
                            <!-- Thêm các trường thông tin cập nhật tại đây -->
                            <div class="form-group">
                                Loại hợp đồng
                                @Html.EditorFor(model => model.LoaiHD, new { htmlAttributes = new { @class = "form-control mt-2"} })
                                @Html.ValidationMessageFor(model => model.LoaiHD, "", new { @class = "text-danger" })
                            </div>
                            <!-- Thêm các trường thông tin khác tại đây -->
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div>
                            <button type="submit" class="btn btn-success m-2">Lưu thông tin</button>
                        </div>
                        <div>
                            @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-danger m-2" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

